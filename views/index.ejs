<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Saisie des données démographiques</title>

  <!-- Bootstrap 5.3 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container py-5">
    <h1>
      <span>
        <i class="bi bi-clipboard-data"></i>
        Formulaire de saisie des données démographiques
      </span>
      <small style="font-size: 0.875rem; font-weight: 400; color: #6b6b6b;">*Tous les champs sont obligatoires</small>
    </h1>

    <form id="demographicForm">

      <!-- 1. SPECIES -->
      <div class="card mb-4">
        <div class="card-header">
          <h5>
            <i class="bi bi-bug"></i>
            1. Espèce
          </h5>
        </div>
        <div class="card-body">
          <div class="row align-items-end">
            <div class="col-md-10">
              <label for="speciesSelect" class="form-label">Sélectionner une espèce</label>
              <select class="form-select" id="speciesSelect" required>
                <option value="">-- Choisir une espèce --</option>
              </select>
            </div>
            <div class="col-md-2">
              <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#speciesModal" data-action="create">
                <i class="bi bi-plus-circle"></i> Créer
              </button>
            </div>
          </div>
          <div class="mt-2">
            <button type="button" class="btn btn-outline-secondary btn-sm" id="editSpeciesBtn" disabled data-bs-toggle="modal" data-bs-target="#speciesModal" data-action="edit">
              <i class="bi bi-pencil"></i> Modifier l'espèce sélectionnée
            </button>
          </div>
        </div>
      </div>

      <!-- 2. BIBLIOGRAPHY -->
      <div class="card mb-4" id="bibliographyCard" style="display: none;">
        <div class="card-header">
          <h5>
            <i class="bi bi-book"></i>
            2. Bibliographie
          </h5>
        </div>
        <div class="card-body">
          <div class="row align-items-end">
            <div class="col-md-10">
              <label for="bibliographySelect" class="form-label">Sélectionner une bibliographie</label>
              <select class="form-select" id="bibliographySelect" required>
                <option value="">-- Choisir une bibliographie --</option>
              </select>
            </div>
            <div class="col-md-2">
              <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#bibliographyModal" data-action="create">
                <i class="bi bi-plus-circle"></i> Créer
              </button>
            </div>
          </div>
          <div class="mt-2">
            <button type="button" class="btn btn-outline-secondary btn-sm" id="editBibliographyBtn" disabled data-bs-toggle="modal" data-bs-target="#bibliographyModal" data-action="edit">
              <i class="bi bi-pencil"></i> Modifier la bibliographie sélectionnée
            </button>
          </div>
        </div>
      </div>

      <!-- 3. AGE GROUP -->
      <div class="card mb-4" id="ageGroupCard" style="display: none;">
        <div class="card-header">
          <h5>
            <i class="bi bi-people"></i>
            3. Groupe d'âge
          </h5>
        </div>
        <div class="card-body">
          <div class="row align-items-end">
            <div class="col-md-10">
              <label for="ageGroupSelect" class="form-label">Sélectionner un groupe d'âge</label>
              <select class="form-select" id="ageGroupSelect" required>
                <option value="">-- Choisir un groupe d'âge --</option>
              </select>
            </div>
            <div class="col-md-2">
              <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#ageGroupModal" data-action="create">
                <i class="bi bi-plus-circle"></i> Créer
              </button>
            </div>
          </div>
          <div class="mt-2">
            <button type="button" class="btn btn-outline-secondary btn-sm" id="editAgeGroupBtn" disabled data-bs-toggle="modal" data-bs-target="#ageGroupModal" data-action="edit">
              <i class="bi bi-pencil"></i> Modifier
            </button>
          </div>
        </div>
      </div>

      <!-- 4. SURVIVAL DATA -->
      <div class="card mb-4" id="survivalCard" style="display: none;">
        <div class="card-header">
          <h5>
            <i class="bi bi-heart-pulse"></i>
            4. Données de survie
          </h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h6>Taux de survie pour ce groupe d'âge</h6>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#survivalModal" data-action="create">
              <i class="bi bi-plus-circle"></i> Ajouter survie
            </button>
          </div>
          <div id="survivalList" class="list-group">
            <!-- Les données de survie s'afficheront ici -->
          </div>
        </div>
      </div>

      <!-- 5. FECUNDITY DATA -->
      <div class="card mb-4" id="fecundityCard" style="display: none;">
        <div class="card-header">
          <h5>
            <i class="bi bi-egg"></i>
            5. Données de fécondité
          </h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h6>Taux de fécondité pour ce groupe d'âge</h6>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#fecundityModal" data-action="create">
              <i class="bi bi-plus-circle"></i> Ajouter fécondité
            </button>
          </div>
          <div id="fecundityList" class="list-group">
            <!-- Les données de fécondité s'afficheront ici -->
          </div>
        </div>
      </div>

      <!-- 6. DISPERSAL DISTANCE -->
      <div class="card mb-4" id="dispersalCard" style="display: none;">
        <div class="card-header">
          <h5>
            <i class="bi bi-arrows-move"></i>
            6. Distance de dispersion
          </h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-3">
            <h6>Distance de dispersion pour cette espèce</h6>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#dispersalModal" data-action="create">
              <i class="bi bi-plus-circle"></i> Ajouter / Modifier
            </button>
          </div>
          <div id="dispersalInfo" class="alert alert-info">
            Aucune donnée de dispersion enregistrée
          </div>
        </div>
      </div>

      <!-- SUBMIT BUTTON -->
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg">
          <i class="bi bi-save"></i> Enregistrer toutes les données
        </button>
      </div>

    </form>
  </div>

  <!-- MODALS -->
  <%- include('partials/modals') %>

  <!-- Bootstrap 5.3 JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- API Client (remplace mockData.js) -->
  <script src="/js/api.js"></script>
  <!-- Form Logic -->
  <script src="/js/form.js"></script>
</body>
</html>
